                        <GridPane hgap="10" vgap="10">
                            <Label style="-fx-text-fill: white;" text="Déplacement haut:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                            <TextField fx:id="moveUpField1" style="-fx-background-color: #444444; -fx-text-fill: white;" GridPane.columnIndex="1" GridPane.rowIndex="0" />

                            <Label style="-fx-text-fill: white;" text="Déplacement bas:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
                            <TextField fx:id="moveDownField1" style="-fx-background-color: #444444; -fx-text-fill: white;" GridPane.columnIndex="1" GridPane.rowIndex="1" />

                            <Label style="-fx-text-fill: white;" text="Déplacement gauche:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
                            <TextField fx:id="moveLeftField1" style="-fx-background-color: #444444; -fx-text-fill: white;" GridPane.columnIndex="1" GridPane.rowIndex="2" />

                            <Label style="-fx-text-fill: white;" text="Déplacement droite:" GridPane.columnIndex="0" GridPane.rowIndex="3" />
                            <TextField fx:id="moveRightField1" style="-fx-background-color: #444444; -fx-text-fill: white;" GridPane.columnIndex="1" GridPane.rowIndex="3" />

                            <Label style="-fx-text-fill: white;" text="Poser une bombe:" GridPane.columnIndex="0" GridPane.rowIndex="4" />
                            <TextField fx:id="placeBombField1" style="-fx-background-color: #444444; -fx-text-fill: white;" GridPane.columnIndex="1" GridPane.rowIndex="4" />
                     <columnConstraints>
                        <ColumnConstraints />
                        <ColumnConstraints />
                     </columnConstraints>
                     <rowConstraints>
                        <RowConstraints />
                        <RowConstraints />
                        <RowConstraints />
                        <RowConstraints />
                        <RowConstraints />
                     </rowConstraints>
                        </GridPane>
                    </VBox>
                    <!-- Joueur 2 -->
