<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.collections.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox spacing="20" style="-fx-background-color: #222222; -fx-padding: 20;" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="fr.amu.iut.bomberman.controller.SettingsController">

    <Label style="-fx-text-fill: white; -fx-font-size: 24; -fx-font-weight: bold;" text="Paramètres" />

    <TabPane style="-fx-background-color: #333333;">
        <tabs>
            <Tab closable="false" text="gameplay">
            <VBox spacing="10" style="-fx-padding: 10;">
                <Label style="-fx-text-fill: white; -fx-font-size: 18;" text="Paramètres de jeu" />

                <HBox alignment="CENTER_LEFT" spacing="10">
                    <Label style="-fx-text-fill: white;" text="Difficulté:" />
                    <ComboBox fx:id="difficultyCombo" style="-fx-background-color: #444444; -fx-text-fill: white;">
                        <items>
                            <FXCollections fx:factory="observableArrayList">
                                <String fx:value="Facile" />
                                <String fx:value="Moyen" />
                                <String fx:value="Difficile" />
                                <String fx:value="Expert" />
                            </FXCollections>
                        </items>
                    </ComboBox>
                </HBox>
                <HBox alignment="CENTER_LEFT" spacing="10">
                    <Label style="-fx-text-fill: white;" text="Nombre de joueurs:" />
                    <Spinner fx:id="playerCountSpinner" style="-fx-background-color: #444444; -fx-text-fill: white;" />
                </HBox>
                <HBox alignment="CENTER_LEFT" spacing="10">
                    <Label style="-fx-text-fill: white;" text="Durée de la partie (min):" />
                    <Spinner fx:id="gameDurationSpinner" style="-fx-background-color: #444444; -fx-text-fill: white;" />
                </HBox>
                <CheckBox fx:id="powerupsCheckbox" style="-fx-text-fill: white;" text="Activer les power-ups" />
                <CheckBox fx:id="obstaclesCheckbox" style="-fx-text-fill: white;" text="Activer les obstacles" />
            </VBox>
            </Tab>
            <Tab closable="false" text="manette">

            </Tab>
            <Tab closable="false" text="clavier">
