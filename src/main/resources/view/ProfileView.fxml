<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.image.*?>

<VBox xmlns="http://javafx.com/javafx/8.0.171"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="fr.amu.iut.bomberman.controller.ProfileController"
      spacing="20" style="-fx-background-color: #222222; -fx-padding: 20;">

    <HBox spacing="20" alignment="CENTER">
        <ImageView fx:id="avatarImage" fitWidth="150" fitHeight="150" style="-fx-border-color: white; -fx-border-width: 2;"/>
        <VBox spacing="10">
            <Label text="Profil Joueur" style="-fx-text-fill: white; -fx-font-size: 24; -fx-font-weight: bold;"/>
            <TextField fx:id="usernameField" promptText="Nom d'utilisateur" style="-fx-background-color: #444444; -fx-text-fill: white;"/>
            <Button text="Changer d'avatar" onAction="#handleChangeAvatar" style="-fx-background-color: #444444; -fx-text-fill: white;"/>
        </VBox>
    </HBox>

    <Separator style="-fx-background-color: #555555;"/>

    <VBox spacing="10">
        <Label text="Statistiques" style="-fx-text-fill: white; -fx-font-size: 18; -fx-font-weight: bold;"/>

        <GridPane hgap="10" vgap="10">
            <Label text="Parties jouées:" style="-fx-text-fill: white;" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
            <Label fx:id="gamesPlayedLabel" text="0" style="-fx-text-fill: white;" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

            <Label text="Victoires:" style="-fx-text-fill: white;" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
            <Label fx:id="winsLabel" text="0" style="-fx-text-fill: white;" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

            <Label text="Meilleur score:" style="-fx-text-fill: white;" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
            <Label fx:id="bestScoreLabel" text="0" style="-fx-text-fill: white;" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

            <Label text="Temps de jeu:" style="-fx-text-fill: white;" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
            <Label fx:id="playTimeLabel" text="0h 0m" style="-fx-text-fill: white;" GridPane.rowIndex="3" GridPane.columnIndex="1"/>
        </GridPane>
    </VBox>

    <Separator style="-fx-background-color: #555555;"/>

    <VBox spacing="10">
        <Label text="Récompenses" style="-fx-text-fill: white; -fx-font-size: 18; -fx-font-weight: bold;"/>

        <HBox fx:id="achievementsContainer" spacing="10">
            <!-- Les récompenses seront ajoutées dynamiquement ici -->
        </HBox>
    </VBox>

    <HBox spacing="10" alignment="CENTER_RIGHT">
        <Button text="Retour" onAction="#handleBack" style="-fx-background-color: #444444; -fx-text-fill: white;"/>
        <Button text="Enregistrer" onAction="#handleSave" style="-fx-background-color: #4CAF50; -fx-text-fill: white;"/>
    </HBox>
</VBox>